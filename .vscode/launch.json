{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [

    {
      "name": "Test: defaults",
      "type": "debugpy",
      "request": "launch",
      "module": "countdown",
      "args": []
    },
    {
      "name": "Test: pointsize, typeface",
      "type": "debugpy",
      "request": "launch",
      "module": "countdown",
      "args": ["-p", "20", "-t", "Courier"]
    },
        {
      "name": "Test: fullscreen",
      "type": "debugpy",
      "request": "launch",
      "module": "countdown",
      "args": ["-f"]
    },
    {
      "name": "Test: Help",
      "type": "debugpy",
      "request": "launch",
      "module": "countdown",
      "args": ["--help"]
    },
    

    
{
      "name": "Profiler",
      "type": "debugpy",
      "request": "launch",
      "module": "countdown",
      "env": {"countdown_PROFILE":"1"},
      "args": ["-f","${workspaceFolder}/tests"]
    },

    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "args": ["test"]
    },
    {
      "name": "pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      // "args": ["-s"] // Don't capture
    },
  ]
}
